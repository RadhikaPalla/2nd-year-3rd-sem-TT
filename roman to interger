#include <stdio.h>
#include <string.h>

// Function to return the integer value of a single Roman character
int value(char r) {
    switch(r) {
        case 'I': return 1;
        case 'V': return 5;
        case 'X': return 10;
        case 'L': return 50;
        case 'C': return 100;
        case 'D': return 500;
        case 'M': return 1000;
        default: return 0;
    }
}

// Function to convert Roman numeral to integer
int romanToInt(char roman[]) {
    int total = 0;
    int i;

    for(i = 0; i < strlen(roman); i++) {
        int s1 = value(roman[i]);
        int s2 = value(roman[i + 1]);

        // If the next value is greater, subtract current value
        if(s1 >= s2)
            total += s1;
        else
            total -= s1;
    }

    return total;
}

int main() {
    char roman[20];

    printf("Enter a Roman numeral (in uppercase): ");
    scanf("%s", roman);

    int result = romanToInt(roman);
    printf("The integer value of %s is %d\n", roman, result);

    return 0;
}
