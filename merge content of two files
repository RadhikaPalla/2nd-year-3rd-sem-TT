#include <stdio.h>
#include <stdlib.h>

int main() {
    FILE *f1, *f2, *f3;
    char ch, file1[50], file2[50], file3[50];

    // Input file names
    printf("Enter the first file name: ");
    scanf("%s", file1);

    printf("Enter the second file name: ");
    scanf("%s", file2);

    printf("Enter the name for the merged file: ");
    scanf("%s", file3);

    // Open first file
    f1 = fopen(file1, "r");
    if (f1 == NULL) {
        printf("Cannot open %s\n", file1);
        exit(1);
    }

    // Open second file
    f2 = fopen(file2, "r");
    if (f2 == NULL) {
        printf("Cannot open %s\n", file2);
        fclose(f1);
        exit(1);
    }

    // Create or open third file for writing
    f3 = fopen(file3, "w");
    if (f3 == NULL) {
        printf("Cannot create %s\n", file3);
        fclose(f1);
        fclose(f2);
        exit(1);
    }

    // Copy contents of first file to third file
    while ((ch = fgetc(f1)) != EOF) {
        fputc(ch, f3);
    }

    // Copy contents of second file to third file
    while ((ch = fgetc(f2)) != EOF) {
        fputc(ch, f3);
    }

    prin
