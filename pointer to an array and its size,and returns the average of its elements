#include <stdio.h>

// Function to calculate average
float calculateAverage(int *arr, int size) {
    int i;
    float sum = 0;

    for(i = 0; i < size; i++) {
        sum += *(arr + i); // Access array elements using pointer
    }

    return sum / size;
}

int main() {
    int arr[50], n, i;
    float avg;

    printf("Enter number of elements in the array: ");
    scanf("%d", &n);

    printf("Enter %d elements:\n", n);
    for(i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    avg = calculateAverage(arr, n);

    printf("Average of the array elements = %.2f\n", avg);

    return 0;
}
