#include <stdio.h>
#include <string.h>

// Function to swap two characters
void swap(char *x, char *y) {
    char temp = *x;
    *x = *y;
    *y = temp;
}

// Recursive function to generate permutations
void permute(char *str, int left, int right) {
    int i;
    if (left == right) {
        printf("%s\n", str);
    } else {
        for (i = left; i <= right; i++) {
            swap((str + left), (str + i));       // Swap current index with left
            permute(str, left + 1, right);       // Recurse for the rest of the string
            swap((str + left), (str + i));       // Backtrack
        }
    }
}

int main() {
    char str[50];
    int n;

    printf("Enter a string: ");
    scanf("%s", str);

    n = strlen(str);
    printf("All permutations of the string:\n");
    permute(str, 0, n - 1);

    return 0;
}
