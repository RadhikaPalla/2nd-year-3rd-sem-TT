#include <stdio.h>

int sentinelLinearSearch(int arr[], int n, int key) {
    int last = arr[n - 1];
    arr[n - 1] = key; // Place the key at the last position (sentinel)

    int i = 0;
    while (arr[i] != key) {
        i++;
    }

    arr[n - 1] = last; // Restore the last element

    if (i < n - 1 || arr[n - 1] == key)
        return i; // Found, return index
    else
        return -1; // Not found
}

int main() {
    int arr[50], n, key, index;

    printf("Enter number of elements: ");
    scanf("%d", &n);

    printf("Enter %d elements:\n", n);
    for(int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    printf("Enter element to search: ");
    scanf("%d", &key);

    index = sentinelLinearSearch(arr, n, key);

    if(index != -1)
        printf("Element %d found at position %d\n", key, index + 1);
    else
        printf("Element %d not found in the array\n", key);

    return 0;
}
