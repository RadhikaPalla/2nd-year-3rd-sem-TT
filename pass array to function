#include <stdio.h>

// Function to calculate average of array elements
float calculateAverage(int arr[], int n) {
    int i;
    float sum = 0;

    for(i = 0; i < n; i++) {
        sum += arr[i];
    }

    return sum / n;
}

int main() {
    int arr[50], n, i;
    float avg;

    printf("Enter number of elements in the array: ");
    scanf("%d", &n);

    printf("Enter %d elements:\n", n);
    for(i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    avg = calculateAverage(arr, n);

    printf("Average of the array elements = %.2f\n", avg);

    return 0;
}
