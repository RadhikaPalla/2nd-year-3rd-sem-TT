#include <stdio.h>
#include <ctype.h>
#include <string.h>

int main() {
    char str[200];
    int i;
    int letters[26] = {0};  // to track each alphabet occurrence
    int index, isPangram = 1;

    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin); // safer than gets()

    for(i = 0; str[i] != '\0'; i++) {
        char ch = tolower(str[i]);  // convert to lowercase
        if(ch >= 'a' && ch <= 'z') {
            index = ch - 'a';
            letters[index] = 1;     // mark the letter as found
        }
    }

    for(i = 0; i < 26; i++) {
        if(letters[i] == 0) {       // if any letter is missing
            isPangram = 0;
            break;
        }
    }

    if(isPangram)
        printf("The given string is a Pangram.\n");
    else
        printf("The given string is NOT a Pangram.\n");

    return 0;
}
